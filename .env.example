# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# CORS - Orígenes permitidos
# ============================================
# En desarrollo: usar * o localhost
# En producción: especificar dominios exactos separados por comas
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# CONFIGURACIÓN DE MONGODB
# ============================================
# Para Docker: mongodb://usuario:password@mongodb:27017
# Para local: mongodb://localhost:27017
MONGO_CONNECTION_STRING=mongodb://mongodb:27017
MONGO_USERNAME=admin
MONGO_PASSWORD=changeme123
MONGO_TIMEOUT=10000
AUTH_DB_NAME=authDB

# ============================================
# CONFIGURACIÓN DE JWT
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# DOCKER COMPOSE VARIABLES
# ============================================
# MongoDB
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme123
MONGO_DATABASE=authDB
MONGO_PORT=27017

# Backend
BACKEND_PORT=3000

# Frontend (si aplica)
FRONTEND_PORT=80

# Node-RED (si aplica)
NODERED_PORT=1880
